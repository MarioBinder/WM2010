<UserControl x:Class="WM2010.Frames.GruppenFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid>
        <Border Background="Black" Opacity="0.6" CornerRadius="5" />
        <StackPanel Name="gruppenPanel" />
        <TextBlock Text="Ergebnisübersicht" VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="Orange" Margin="0 0 15 15" FontSize="18" FontWeight="Bold"
                   MouseEnter="Ergebnisuebersicht_MouseEnter"
                   MouseLeave="Ergebnisuebersicht_MouseLeave"
                   MouseLeftButtonDown="Ergebnisuebersicht_MouseLeftButtonDown" />
    </Grid>
  
</UserControl>
